@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="sv-se">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Bolinders Bil : Logga in</title>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <partial name="_CookieConsentPartial" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <div class="container">
        <form asp-action="Login" method="post">
            <br />
            <h2>Administration inloggning:</h2>
            <br />
            <div class="card">
                <div class="card-body">
                    <label asp-for="UserName">E-postadress:</label>
                    <input asp-for="UserName" class="form-control" placeholder="E-postadress" required autofocus>
                    <br />
                    <label asp-for="Password">Lösenord:</label>
                    <input asp-for="Password" class="form-control" placeholder="Lösenord" required>
                    <br />
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Logga in</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>