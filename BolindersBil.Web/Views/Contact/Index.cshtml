@model BolindersBil.Web.Models.ContactViewModel
@{
    ViewData["Title"] = "Kontakta oss";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            Bolinders Bil Jönköping<br />
            Lovsjövägen 33 Jönköping<br />
            <strong>Telefon: </strong><a href="tel: +4636123456">036-123456</a>
            <br />
            <strong>E-post: </strong> <a href="mailto:jonkoping@bolindersbil.se">jonkoping@bolindersbil.se</a>
            <br />
            <br />
        </div>
        <div class="col-md-4">
            Bolinders Bil Värnamo<br />
            Bultgatan 2 Värnamo<br />
            <strong>Telefon: </strong><a href="tel: +46370123456">0370-123456</a>
            <br />
            <strong>E-post: </strong> <a href="mailto:varnamo@bolindersbil.se">varnamo@bolindersbil.se</a>
            <br />
            <br />
        </div>
        <div class="col-md-4">
            Bolinders Bil Göteborg<br />
            Industrivägen 1 Göteborg<br />
            <strong>Telefon: </strong><a href="tel: +4631123456">031-123456</a>
            <br />
            <strong>E-post: </strong> <a href="mailto:goteborg@bolindersbil.se">goteborg@bolindersbil.se</a>
            <br />
            <br />
        </div>
        <div class="col-md-6">
            <div id="map">

            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading text-center">
                    <h4>Kontakt formulär</h4>
                </div>
                <div class="panel-body">
                    <form asp-action="SendMail" method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="Name">Namn:</label>
                            <input class="form-control" asp-for="Name" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">E-post:</label>
                            <input class="form-control" type="email" asp-for="Email" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Title">Ämne:</label>
                            <input class="form-control" asp-for="Title" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Message">Meddelande:</label>
                            <textarea name="msg" type="text" class="form-control" required></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="DealershipEmail">Anläggning:</label>
                            <select class="form-control" id="DealshipsForm" asp-for="DealershipEmail">
                                <option value="kontakt@bolindersbil.se">Välj anläggning</option>
                                <option value="jonkoping@bolindersbil.se">Jönkoping</option>
                                <option value="varnamo@bolindersbil.se">Värnamo</option>
                                <option value="goteborg@bolindersbil.se">Göteborg</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-info">Skicka</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
