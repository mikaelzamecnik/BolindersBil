@model EditVehicleViewModel

<div class="form-group">
    <label>Bilmärke<small></small></label>
    <select asp-for="Vehicle.BrandId" asp-items="Model.Brands" class="form-control" required></select>
</div>
<div class="form-group">
    <label>Modell</label>
    <input asp-for="Vehicle.Model" class="form-control" required />
</div>
<div class="form-group">
    <label>Modell Beskrivning</label>
    <input asp-for="Vehicle.ModelDescription" class="form-control" required />
</div>
<div class="form-group">
    <label>Anläggning</label>
    <select asp-for="Vehicle.DealerShipId" asp-items="Model.DealerShips" class="form-control" required></select>
</div>
<div class="form-group">
    <label>Registeringsnummer</label>
    <input asp-for="Vehicle.RegistrationNumber" class="form-control" required />
</div>
<div class="form-group">
    <label>Pris(ex moms)</label>
    <input asp-for="Vehicle.Price" class="form-control" required />
</div>
<div class="form-group">
    <label>Årsmodell</label>
    <select asp-for="Vehicle.Year" class="form-control" required>

        @for (var i = DateTime.Now.AddYears(+1).Year; i >= 1980; i--)

        {

            <option>@i</option>
        }
        <option>70-talet</option>
        <option>60-talet</option>
        <option>50-talet</option>
        <option>40-talet eller äldre</option>
    </select>
</div>
<div class="form-group">
    <label>Antal Kilometer</label>
    <input asp-for="Vehicle.Mileage" class="form-control" required />
</div>
<div class="form-group">
    <label>Fordonstyp</label>
    <select asp-for="Vehicle.Body" asp-items="FilterListItems.Body" class="form-control" required></select>
</div>
<div class="form-group">
    <label>Färg</label>
    <input asp-for="Vehicle.Color" class="form-control" required />
</div>
<div class="form-group">
    <label>Växellåda</label>
    <select asp-for="Vehicle.Transmission" asp-items="FilterListItems.Transmission" class="form-control" required></select>
</div>
<div class="form-group">
    <label>Bränsle</label>
    <select asp-for="Vehicle.Fuel" asp-items="FilterListItems.Fuel" class="form-control" required></select>
</div>
<div class="form-group">
    <label>Hästkrafter</label>
    <input asp-for="Vehicle.Horsepower" class="form-control" required />
</div>
<div class="form-group">
    <label>Klicka i rutan om bilen är begagnad</label>
    <input type="checkbox" asp-for="Vehicle.Used" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Vehicle.ImageUrl"></label>
    <textarea asp-for="Vehicle.ImageUrl" class="form-control"></textarea>
</div>
<div class="form-group">
    <label>Klicka i rutan om bilen är leasebar</label>
    <input type="checkbox" asp-for="Vehicle.Lease" class="form-control" />
</div>

<div id="myDIV" class="form-group">
    <label>Lägg till extrautrustning</label>
    <input type="text" id="myInput" class="form-control" /><span onclick="newElement()" class="btn btn-primary">Lägg till</span><br />
    <label>Tillagd Utrustning</label>
    <textarea type="text" id="attrtext" asp-for="Vehicle.Attributes" class="form-control"></textarea>
</div>

<br />

<div class="float-left">
    <button class="btn btn-primary" type="submit">Spara</button>
    <a asp-action="Index" class="btn btn-default">Avbryt</a>
</div>