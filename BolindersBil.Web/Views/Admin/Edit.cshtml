@model EditVehicleViewModel
@{
    ViewData["Title"] = "Redigera Fordon";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Edit</h2>
@*@Html.DropDownList("yearData", ViewBag.YearList as SelectList)*@
<form asp-action="Edit()" method="post" class="col-md-4">
    <input type="hidden" asp-for="Vehicle.Id" />
    <input type="datetime" asp-for="Vehicle.DateUpdated" class="form-control" hidden />
    <div class="form-group">
        <label>Bilmärke</label>
        <select asp-for="Vehicle.BrandId" asp-items="Model.Brands" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Modell</label>
        <input asp-for="Vehicle.Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Modell Beskrivning</label>
        <input asp-for="Vehicle.ModelDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Anläggning</label>
        <select asp-for="Vehicle.DealerShipId" asp-items="Model.DealerShips" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Registeringsnummer</label>
        <input asp-for="Vehicle.RegistrationNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pris(ex moms)</label>
        <input asp-for="Vehicle.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Årsmodell</label>
        <select asp-for="Vehicle.Year" asp-items="Html.GetEnumSelectList<Year>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Antal Kilometer</label>
        <input asp-for="Vehicle.Mileage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fordonstyp</label>
        <select asp-for="Vehicle.Body"  asp-items="Html.GetEnumSelectList<Body>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Färg</label>
        <input asp-for="Vehicle.Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Växellåda</label>
        <select asp-for="Vehicle.Transmission" asp-items="Html.GetEnumSelectList<Transmission>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Bränsle</label>
        <select asp-for="Vehicle.Fuel" asp-items="Html.GetEnumSelectList<Fuel>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Hästkrafter</label>
        <input asp-for="Vehicle.Horsepower" class="form-control" />
    </div>
    <div class="form-group">
        <label>Klicka i rutan om bilen är begagnad</label>
        <input type="checkbox" asp-for="Vehicle.Used" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Vehicle.ImageUrl"></label>
        <textarea asp-for="Vehicle.ImageUrl" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Klicka i rutan om bilen är leasebar</label>
        <input type="checkbox" asp-for="Vehicle.Lease" class="form-control" />
    </div>
    <div class="form-group">
        <label>Flera egenskaper</label>
        <input asp-for="Vehicle.Attributes" class="form-control" />
    </div>
    <div class="pull-right">
        <button class="btn btn-primary" type="submit">Spara</button>
        <a asp-action="Index" class="btn btn-default">Avbryt</a>
    </div>
</form>

